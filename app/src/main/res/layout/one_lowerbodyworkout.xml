<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    android:elevation="8dp"
    android:background="#615E5E"
    app:cardCornerRadius="16dp"
    android:layout_marginTop="10dp"
    android:id="@+id/userEntryTrainRow">


    //Lower Body workouts
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        //Workout day Display
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp"
            android:elevation="16dp"
            app:cardBackgroundColor="#ccc">

            <TextView
                android:id="@+id/workoutDayLowerBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lower Body workout day"
                android:textAlignment="center"
                android:textSize="20dp"/>
        </androidx.cardview.widget.CardView>

        //Procedure Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Procedure : "/>
            <TextView
                android:id="@+id/procedureLowerBody"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Procedure"/>

        </LinearLayout>

        //Time and Duration Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Time Duration : "/>
            <TextView
                android:id="@+id/durationLowerBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TimeDuration"/>

        </LinearLayout>

        //Benefits Display
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Benefits : "/>
            <TextView
                android:id="@+id/benefitsLowerBody"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bnefits"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            //Update btn
            <androidx.cardview.widget.CardView
                android:id="@+id/CardUpdateRowDisplayTT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#5F9EA0"
                app:cardCornerRadius="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Update"
                    android:textAlignment="center"
                    android:textColor="#FFF" />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="16dp"
                android:layout_height="10dp"/>

            //Delete btn
            <androidx.cardview.widget.CardView
                android:id="@+id/CardDeleteRowDisplayTT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#E30C14"
                app:cardCornerRadius="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_margin="8dp"
                    android:textAlignment="center"
                    android:textColor="#FFF"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>