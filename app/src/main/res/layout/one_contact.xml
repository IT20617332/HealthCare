<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:elevation="8dp"
    android:layout_marginBottom = "8dp"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin = "8dp"
            app:cardCornerRadius="16dp"
            android:elevation="8dp">
            
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Trainer Name"
                android:textAlignment="center"
                android:textSize="20dp"/>
            
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Qualifications : "/>

            <TextView
                android:id="@+id/tvQualifications"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Qualifications : "/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Contact No : "/>

            <TextView
                android:id="@+id/tvContactno"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Contact No : "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Available Time : "/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Available Time :  "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/concardUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#5F9EA0"
                app:cardCornerRadius="16dp">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update "
                android:textAlignment="center"
                android:textColor="#FFF"
                android:layout_margin="8dp"/>
          </androidx.cardview.widget.CardView>

            <View
                android:layout_width="16dp"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/concardDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#E30C14"
                app:cardCornerRadius="16dp">


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:layout_margin="8dp"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>